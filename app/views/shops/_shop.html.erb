<div class="col-3">
  <div class="card-shop">
    <img src="https://source.unsplash.com/1600x900/?shopfront" />
    <div class="card-shop-infos">
      <div class="review">
          <div>
          <h2><%= shop.name %></h2>
          <p>Items found: <%= shop.items.count %></p>
          </div>
          <p>Shop address: <%= shop.address %></p>
          <p>Phone number: <%= shop.phone_number %></p>
          <%= link_to "Add a review", new_shop_review_path(shop) %>
      </div>
    </div>
  </div>
</div>
<div class="col-9">
  <div class="card-product-container d-flex">
    <%= render shop.items %>
  </div>
</div>
