<div class="container">
  <% @shops.each do |shop| %>
    <div class="d-flex">
      <div class="card-shop">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-shop-infos">
          <div>
            <h2><%= shop.name %></h2>
            <p><%= shop.address %> - <%= shop.phone_number %></p>
          </div>
        </div>
      </div>
      <div class="flex-grow-1 d-flex align-items-center">
        <% shop.items.each do |item| %>
          <div>
            <div class="card-product mx-3">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
              <div class="card-product-infos">
                <h2><%= item.name %></h2>
                <p>$<%= item.price %> - <strong><%= item.quantity %> units left</strong></p>
              </div>
            </div>
            <div class="mx-3 my-2">
              <%= button_to "Add to Cart", action: "create", item_id: item.id %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
